{
  "id": "English Test Flow",
  "description": "Tests whether a naive encoding of English can be matched to text via a pronunciation dictionary.",

  "features": [
    {
      "path": "../resources/encodings/features.json"
    }
  ],

  "encodings": [
    {
      "features": "Default",
      "path": "../resources/encodings/ipa.json"
    },
    {
      "features": "Default",
      "path": "../resources/encodings/cmu.json"
    }
  ],

  "lexicons": [
    {
      "id": "CMUDict",
      "type": "CMUDict",
      "features": "Default",
      "encoding": "CMU",
      "path": "../resources/lexicons/cmudict/cmudict-0.7b",
      "debugLimit": 1000
    }
  ],

  "steps": [
    {
      "id": "InputText",
      "type": "SampleText",
      "features": "Default",
      "path": "english_test/austen_persuasion.txt"
    },
    {
      "id": "NaivePhonological",
      "type": "Transducer",
      "features": "Default",
      "encoding": "IPA"
    },
    {
      "id": "LexicalMatch",
      "type": "DTWMatcher",
      "lexicon": "CMUDict"
    },
    {
      "id": "MatchReport",
      "type": "MatchReport",
      "output": "../reports/english_test.html"
    }
  ]
}
